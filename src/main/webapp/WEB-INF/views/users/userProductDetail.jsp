                            $sec.on('scroll', function () {
                                if (reviewLoading || reviewEnd) return;
                                if ($sec.scrollTop() + $sec.innerHeight() >= $sec[0].scrollHeight - 50) {
                                    loadReviews();
                                }
                            });
                        }

                        // ÏßÄÎèÑÏóê Í∞ÄÍ≤å Ï£ºÏÜå ÌåùÏóÖÏ∞Ω ÌëúÏãú
                        $('.address-popup').on('click', function () {
